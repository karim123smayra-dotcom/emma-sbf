<script>
function spawnHeart(){
  const h=document.createElement("div");
  h.className="heart";
  h.style.left=Math.random()*window.innerWidth+"px";
  h.style.bottom="-20px";
  h.style.animationDuration=(6+Math.random()*4)+"s";
  document.body.appendChild(h);
  setTimeout(()=>h.remove(),10000);
}
setInterval(spawnHeart,500);

function valentineYes(){
  alert("Correct answer ğŸ˜ŒğŸ’");
  document.getElementById("title").textContent="Best Valentine Ever ğŸ’˜";
  for(let i=0;i<50;i++) setTimeout(spawnHeart,i*25);
}

function openLetter(){
  document.getElementById("loveModal").classList.add("open");
}
function closeLetter(){
  document.getElementById("loveModal").classList.remove("open");
}
</script>

