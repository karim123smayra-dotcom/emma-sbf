  <script>
    const $ = (id) => document.getElementById(id);

    // Date badge
    const now = new Date();
    $("dateBadge").textContent = now.toLocaleDateString(undefined, { year:"numeric", month:"long", day:"numeric" });

    // Hearts
    function spawnHeart(){
      const h = document.createElement("div");
      h.className = "heart";
      const x = Math.random() * window.innerWidth;
      h.style.left = x + "px";
      h.style.bottom = "-24px";
      h.style.animationDuration = (6 + Math.random()*5) + "s";
      h.style.background = Math.random() > 0.5 ? "#ff8fb3" : "#ff3b7a";
      document.body.appendChild(h);
      setTimeout(()=>h.remove(), 12000);
    }
    setInterval(spawnHeart, 450);

    // Personalize
    $("applyBtn").addEventListener("click", () => {
      const her = $("nameInput").value.trim();
      const you = $("yourNameInput").value.trim();
      if (her){
        $("herNameBadge").textContent = her;
        $("title").textContent = `Happy Valentineâ€™s, ${her} ğŸ’˜`;
      }
      $("signature").textContent = you ? `â€” ${you}` : "â€” Yours";
    });

    // Valentine button
    $("yesBtn").addEventListener("click", () => {
      alert("YAY!! ğŸ’ğŸ’ğŸ’");
      for (let i=0;i<25;i++) setTimeout(spawnHeart, i*40);
    });

    // Surprise
    $("surpriseBtn").addEventListener("click", () => {
      const lines = [
        "I love your smile.",
        "I love your heart.",
        "I love your mind.",
        "I love your laugh.",
        "I love you. Always."
      ];
      const pick = lines[Math.floor(Math.random()*lines.length)];
      alert("âœ¨ Surprise message âœ¨\n\n" + pick);
    });

    // Add moment
    $("addMomentBtn").addEventListener("click", () => {
      const txt = $("momentInput").value.trim();
      if (!txt) return;
      const div = document.createElement("div");
      div.className = "moment";
      div.textContent = "ğŸ’ " + txt;
      $("moments").appendChild(div);
      $("momentInput").value = "";
    });

    // Music (optional)
    const audio = $("bgm");
    $("musicBtn").addEventListener("click", async (e) => {
      // If you put a file named music.mp3 in the folder, uncomment the next line:
      // audio.src = "music.mp3";

      if (!audio.src) {
        alert("To add music: put an mp3 in the same folder and set audio.src = 'music.mp3' in the code.");
        return;
      }
      if (audio.paused) {
        try { await audio.play(); } catch {}
        e.target.setAttribute("aria-pressed","true");
        e.target.textContent = "Pause music â¸ï¸";
      } else {
        audio.pause();
        e.target.setAttribute("aria-pressed","false");
        e.target.textContent = "Play music ğŸµ";
      }
    });
  </script>
